---
import { Icon } from 'astro-icon';
import { cn } from '@/lib/utils';
import { buttonVariants, Button } from '@/components/ui/button';
---

<header class="sticky top-0 z-50">
  <div class="h-16 pt-6">
    <div class="w-full sm:px-8">
      <div class="mx-auto max-w-7xl lg:px-8">
        <div class="px-4 sm:px-8 lg:px-12">
          <div class="mx-auto max-w-2xl lg:max-w-5xl">
            <div class="flex gap-4">
              <div class="flex flex-1"></div>
              <div class="flex flex-1 justify-end md:justify-center"></div>
              <div class="flex justify-end md:flex-1">
                <Button
                  variant="ghost"
                  size="icon"
                  id="theme-toggle"
                  type="button"
                  aria-label="Toggle dark mode"
                >
                  <Icon
                    name="ph:sun-bold"
                    aria-hidden="true"
                    class="h-6 w-6 stroke-amber-600 text-amber-500 transition duration-200 dark:hidden [@media(prefers-color-scheme:dark)]:stroke-amber-600 [@media(prefers-color-scheme:dark)]:text-amber-500"
                  />
                  <Icon
                    name="ph:moon-stars-bold"
                    aria-hidden="true"
                    class="hidden h-6 w-6 stroke-slate-100 text-slate-50 transition duration-200 dark:block [@media_not_(prefers-color-scheme:dark)]:stroke-amber-600 [@media_not_(prefers-color-scheme:dark)]:text-amber-500"
                  />
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script is:inline>
const theme = (() => {
  if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
    return localStorage.getItem('theme');
  }
  if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
    return 'dark';
  }
  return 'light';
})();

if (theme === 'light') {
  document.documentElement.classList.remove('dark');
} else {
  document.documentElement.classList.add('dark');
}

window.localStorage.setItem('theme', theme);
</script>

<script>
  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  };

  const darkModeButton = document.getElementById('theme-toggle');

  if (darkModeButton) {
    darkModeButton.addEventListener('click', handleToggleClick);
  }
</script>
