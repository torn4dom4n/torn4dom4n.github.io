---
import BaseLayout from '@/layouts/BaseLayout.astro'
import About from '@/components/About.astro'
import FindMe from '@/components/FindMe.astro'
import Gallery from '@/components/Gallery.astro'
import Playing from '@/components/Playing.astro'
import LogoCard from '@/components/LogoCard.astro'
import Projects from '@/components/Projects.astro'
import Contact from '@/components/Contact.astro'
import Lyrics from '@/components/Lyrics.astro'
import Footer from '@/components/Footer.astro'

import { siteConfig } from '@/config'
---

<BaseLayout title={siteConfig.name} description={siteConfig.description}>
  <main class="flex-auto p-4">
    <div
      class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:grid-rows-3 xl:grid-cols-4 xl:grid-rows-4"
    >
      <About />
      <FindMe />
      <Gallery />
      <Playing />
      <LogoCard />
      <Projects />
      <Contact />
      <Lyrics />
      <Footer />
    </div>
  </main>
</BaseLayout>
