---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "@/lib/utils";

type Props = HTMLAttributes<"div"> & VariantProps<typeof dialogHeader>;

const dialogHeader = cva("flex flex-col space-y-2", {
  variants: {
    align: {
      center: "text-center",
      left: "sm:text-left",
    },
  },
  defaultVariants: {
    align: "left",
  },
});

const { class: className, align, ...rest } = Astro.props;
---

<div class={cn(dialogHeader({ align }), className)} {...rest}>
  <slot />
</div>
