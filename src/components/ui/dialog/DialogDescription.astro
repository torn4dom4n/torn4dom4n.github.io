---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "@/lib/utils";

type Props = HTMLAttributes<"p"> & VariantProps<typeof dialogDescription>;

const dialogDescription = cva("text-muted-foreground", {
  variants: {
    size: {
      sm: "text-sm",
      md: "text-base",
      lg: "text-lg",
    },
  },
  defaultVariants: {
    size: "md",
  },
});

const { class: className, size, ...rest } = Astro.props;
---

<p class={cn(dialogDescription({ size }), className)} {...rest}>
	<slot />
</p>
