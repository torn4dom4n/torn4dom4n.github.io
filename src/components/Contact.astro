---
import { siteConfig } from '@/config'

import { Mail } from 'lucide-react'

import { Button } from '@/components/ui/button'

import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
---

<Card
  className="relative flex h-full flex-col items-center justify-center overflow-hidden p-8 lg:col-span-2 lg:row-start-4"
>
  <CardHeader>
    <CardTitle
      className="text-center text-xl font-medium tracking-tight text-primary md:text-6xl"
    >
      Send me <span class="lg:block">a letter</span>
    </CardTitle>
  </CardHeader>
  <CardContent>
    <a
      aria-label="Nhat Nguyen's Gmail"
      target="_blank"
      rel="noopener noreferrer"
      href={`mailto:${siteConfig.links.email}`}
    >
      <Button>
        <Mail className="mr-2 size-4" />Email
      </Button>
    </a>
  </CardContent>
</Card>
